<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MedicoController</servlet-name>
        <servlet-class>controller.MedicoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PacienteController</servlet-name>
        <servlet-class>controller.PacienteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdministradorController</servlet-name>
        <servlet-class>controller.AdministradorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultaController</servlet-name>
        <servlet-class>controller.ConsultaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExameController</servlet-name>
        <servlet-class>controller.ExameController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EspecialidadeController</servlet-name>
        <servlet-class>controller.EspecialidadeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MedicoController</servlet-name>
        <url-pattern>/MedicoController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PacienteController</servlet-name>
        <url-pattern>/PacienteController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdministradorController</servlet-name>
        <url-pattern>/AdministradorController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultaController</servlet-name>
        <url-pattern>/ConsultaController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExameController</servlet-name>
        <url-pattern>/ExameController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EspecialidadeController</servlet-name>
        <url-pattern>/EspecialidadeController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            180
        </session-timeout>
    </session-config>
</web-app>
